  <h1>Your bookings </h1>
<div class="book_box">
    <% current_user.patient_bookings.each do |booking| %>
      <div class="book_card">
         <div>
          <h4><%= booking.date.strftime("%b %e at %l:%M %p") %></h4>
          You have an appointment with psychologist
          <%= link_to doctor_path(booking.doctor) do  %>
          <%= booking.doctor.first_name %> <%= booking.doctor.last_name %>
          <% end %>
        </div>

        <div class="btns">

          <% chatroom = Chatroom.find_by(patient: booking.patient, doctor: booking.doctor) %>
          <%= link_to chatroom_path(chatroom), class: "btn-message" do %>
          Message
          <i class="fa-regular fa-paper-plane"></i>
          <% end %>

          <div class="canc_btn">
          <%= link_to "Cancel", booking_path(booking),  class: "btn-cancel",  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
          </div>
        </div>


  <% end %>
      </div>


</div>
