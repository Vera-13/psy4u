<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= simple_form_for [@doctor, @review], url:  doctor_reviews_path(@doctor), data: {controller: "form-submit" } do |f| %>
        <%= f.input :comment %>
        <%= f.input :rating, collection: (1..5).to_a, label: "Rate your experience",
         input_html: {data: {action: "click->form-submit#sad"}, data: { controller: "star-rating"} }  %>
        <%= f.submit "Send your review" %>
      <% end %>
    </div>
  </div>
</div>
